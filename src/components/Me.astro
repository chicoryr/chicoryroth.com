---
import Links from "./Links";
---

<section class="pt-12 sm:pt-20 px-4">
  <div class="flex flex-col md:flex-row items-center gap-8 sm:gap-12 max-w-4xl mx-auto">
    <!-- Profile Photo -->
    <div class="flex-shrink-0">
      <div class="w-36 h-36 sm:w-50 sm:h-50 rounded-full border-4 border-gray-200 bg-gray-100 flex items-center justify-center">
        <img src="/me.jpeg" alt="Chicory Roth" class="rounded-full w-full h-full object-cover" />
      </div>
    </div>

    <!-- Info and Social Links -->
    <div class="flex flex-col items-center md:items-start space-y-6 sm:space-y-8">
      <!-- Name and Title -->
      <div class="text-center md:text-left space-y-3 sm:space-y-4">
        <h1 class="text-2xl sm:text-3xl md:text-5xl font-bold text-gray-900">
          Chicory Roth
        </h1>
        <p class="text-sm sm:text-base md:text-lg text-gray-600">
          Software Engineer
        </p>
      </div>

      <!-- Social Links -->
      <div class="bg-gray-50 rounded-xl p-4 sm:p-6 border border-gray-200 w-full sm:w-auto">
        <Links />
      </div>
    </div>
  </div>
</section>