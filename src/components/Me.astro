---
import Links from "./Links";
---

<section class="pt-20 px-4">
  <div class="flex flex-col md:flex-row items-center gap-12 max-w-4xl mx-auto">
    <!-- Profile Photo -->
    <div class="flex-shrink-0">
      <div class="w-64 h-64 rounded-full border-4 border-gray-200 bg-gray-100 flex items-center justify-center">
        <img src="/me.jpeg" alt="Chicory Roth" class="rounded-full w-full h-full object-cover" />
      </div>
    </div>

    <!-- Info and Social Links -->
    <div class="flex flex-col items-center md:items-start space-y-8">
      <!-- Name and Title -->
      <div class="text-center md:text-left space-y-4">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900">
          Chicory Roth
        </h1>
        <p class="text-lg md:text-xl text-gray-600">
          Software Engineer
        </p>
      </div>

      <!-- Social Links -->
      <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
        <Links />
      </div>
    </div>
  </div>
</section>