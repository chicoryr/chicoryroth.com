---
export interface Props {
  year: string;
}

const { year } = Astro.props;
---

<div class="absolute left-4 transform -translate-x-1/2 z-10 -bottom-6 sm:left-4">
  <div class="bg-white border-2 border-gray-300 rounded-full px-2 py-0.5 sm:px-3 sm:py-1 shadow-sm">
    <span class="text-[0.55rem] sm:text-[0.625rem] font-semibold text-gray-700">{year}</span>
  </div>
</div>

<style>
  @media (max-width: 640px) {
    div {
      left: 0.75rem !important;
    }
  }
</style>